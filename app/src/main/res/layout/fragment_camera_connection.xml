<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.mauro.movilvisionglosariolenguajeseas.view.CameraConnectionFragment">

   <com.example.mauro.movilvisionglosariolenguajeseas.view.AutoFitTextureView
       android:id="@+id/texture"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_alignParentBottom="true"/>

    <com.example.mauro.movilvisionglosariolenguajeseas.view.RecognitionScoreView
        android:id="@+id/results"
        android:layout_width="match_parent"
        android:layout_height="112dp"
        android:layout_alignParentTop="true"/>

    <com.example.mauro.movilvisionglosariolenguajeseas.view.OverlayView
        android:id="@+id/debug_overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true" />

    <Chronometer
        android:id="@+id/txtCrono"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/results"
        android:layout_marginEnd="43dp"
        android:layout_marginTop="15dp"
        android:textSize="@android:dimen/app_icon_size"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/txtTemp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/txtCrono"
        android:layout_marginBottom="20dp"
        android:layout_marginEnd="24dp"
        android:layout_toStartOf="@+id/txtCrono"
        android:text="10"
        android:textColor="@android:color/holo_green_light"
        android:textSize="20sp"
        android:textStyle="bold" />


</RelativeLayout>
