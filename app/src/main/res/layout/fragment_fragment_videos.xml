<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.mauro.movilvisionglosariolenguajeseas.Fragment.fragment_videos">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txtPalabra"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="11dp"
            android:text="@string/hello_blank_fragment"
            android:textSize="30sp"
            tools:text="Palabra1" />

        <VideoView
            android:id="@+id/vdVideo"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/txtPalabra"
            android:theme="@style/Animation.Design.BottomSheetDialog"
            tools:layout_height="400dp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="435dp"
        tools:layout_height="75dp">

        <ImageButton
            android:id="@+id/imbtnVolver"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/imbtnInicio"
            android:layout_marginEnd="16dp"
            android:layout_toStartOf="@+id/imbtnInicio"
            android:src="@android:drawable/ic_menu_revert" />

        <ImageButton
            android:id="@+id/imbtnPracticar"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="13dp"
            android:src="@android:drawable/presence_video_away" />

        <ImageButton
            android:id="@+id/imbtnAyuda"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="29dp"
            android:layout_toEndOf="@+id/imbtnPracticar"
            android:src="?android:attr/alertDialogIcon" />

        <ImageButton
            android:id="@+id/imbtnInicio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="34dp"
            android:src="?attr/homeAsUpIndicator" />
    </RelativeLayout>


</FrameLayout>
